<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_240sdp"
    android:layout_height="wrap_content"
    android:id="@+id/card_view_root"
    android:layout_margin="@dimen/_3sdp"
    android:elevation="@dimen/_10sdp"
    xmlns:card_view="http://schemas.android.com/tools"
    card_view:cardCornerRadius="@dimen/_10sdp">

    <RelativeLayout
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_offer_text"
            android:background="@color/white">

            <FrameLayout
                android:id="@+id/v_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true">

                <ImageView
                    android:id="@+id/iv_chefimage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/chef_01_image" />

                <ProgressBar
                    android:id="@+id/progressbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone" />
            </FrameLayout>


            <TextView
                android:id="@+id/tv_position"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_offer_text"
            android:layout_width="@dimen/_140sdp"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangular_sharp"
            android:gravity="center_horizontal"
            android:padding="@dimen/_5sdp"
            android:text="100% off"
            android:visibility="gone"
            android:textColor="@color/white" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>




